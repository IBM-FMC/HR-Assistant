<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom">
	<div class="box box-primary">
		<div class="box-header with-border">
			<xp:text escape="true" id="computedField1" styleClass="box-title"
				tagName="h3" value="${compositeData.title}"></xp:text>
			<div class="box-body">
				<div class="chart">
					<canvas id="chart_canvas_${compositeData.chartAlias}"
						height="400" width="400" style="height:400px;width:400px;"></canvas>
					<xp:scriptBlock id="scriptBlock2">
						<xp:this.value><![CDATA[
				dojo.addOnLoad(function(){
    var config#{compositeData.chartAlias} = {
        type: '#{applicationController.chartType}',
        data: #{compositeData.data},
        
        options: { 
         responsive: true,
    maintainAspectRatio: true,
            legend: {
                position: 'top', 
            },
            title: {
                display: false,
                text: 'Chart.js Radar Chart'
            },
            scale: { 
              reverse: false,
              ticks: {
                beginAtZero: true
              }
            }
        }
    };

    
       var chart#{compositeData.chartAlias} = new Chart(document.getElementById("chart_canvas_#{compositeData.chartAlias}"), config#{compositeData.chartAlias});
    

    $('#randomizeData').click(function() {
        $.each(config.data.datasets, function(i, dataset) {
            dataset.data = dataset.data.map(function() {
                return randomScalingFactor();
            });

        });

        chart#{compositeData.chartAlias}.update();
    });

    $('#addData').click(function() {
        if (config.data.datasets.length > 0) {
            config.data.labels.push('dataset #' + config.data.labels.length);

            $.each(config.data.datasets, function (i, dataset) {
                dataset.data.push(randomScalingFactor());
            });

            chart#{compositeData.chartAlias}.update();
        }
    });

    $('#removeDataset').click(function() {
        config.data.datasets.splice(0, 1);
        chart#{compositeData.chartAlias}.update();
    });

    $('#removeData').click(function() {
        config.data.labels.pop(); // remove the label first

        $.each(config.data.datasets, function(i, dataset) {
            dataset.data.pop();
        });

        chart#{compositeData.chartAlias}.update();
    });
    });
		]]></xp:this.value>
					</xp:scriptBlock>

				</div>
			</div>
		</div>
	</div>

</xp:view>
