<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom">
	<xc:ccLayout pageTitle="Dashboard">
		<xp:this.facets>
			<xp:panel xp:key="Content">
				<div class="row">
					<div class="col-xs-12 col-md-3">
						<xc:chart
							chart="#{javascript:chartFactoryProducer.getChartFactoryApplicationsByJob().createChart(jobApplicationController.jobApplications)}"
							chartAlias="appl_per_job" chartAliasGUI="appl_per_job" title="Applications per Job">
						</xc:chart>
					</div>
					<div class="col-xs-12 col-md-9">
						<xc:jobApplication_list title="Recent job applications"
							showButtons="false" jobApplicationList="#{jobApplicationController.jobApplicationsRecent}"></xc:jobApplication_list>
					</div>
				</div>


				<div class="row">

					<div class="col-md-12">
						<xp:div styleClass="box box-primary" id="pnlCharts">
							<div class="box-header">
								<xp:text escape="true" id="computedField2" tagName="h3"
									styleClass="box-title" value="IBM Watson Tone Anaylized Jobs"></xp:text>

							</div>
							<!-- /.box-header -->

							<div class="box-body">
								<xp:div styleClass="row">
									<div class="col-md-4 col-xs-12">
										<xc:chart
											chart="#{javascript:chartFactoryProducer.getChartFactoryToneAnalyzerEmotionTone().createChart(jobController.jobs)}"
											chartAlias="emotion_tone" chartAliasGUI="emotion_tone" title="Emotion Tone">
										</xc:chart>
									</div>
									<div class="col-md-4 col-xs-12">
										<xc:chart
											chart="#{javascript:chartFactoryProducer.getChartFactoryToneAnalyzerLanguageTone().createChart(jobController.jobs)}"
											chartAlias="language_tone" chartAliasGUI="language_tone"
											title="Language Tone">
										</xc:chart>

									</div>
									<div class="col-md-4 col-xs-12">
										<xc:chart
											chart="#{javascript:chartFactoryProducer.getChartFactoryToneAnalyzerSocialTone().createChart(jobController.jobs)}"
											chartAlias="social_tone" chartAliasGUI="social_tone" title="Social Tone">
										</xc:chart>
									</div>
								</xp:div>
							</div>

						</xp:div>
					</div>
				</div>

				<div class="row">

					<div class="col-md-12">
						<div class="box box-primary" id="div1">
							<div class="box-header">
								<xp:text escape="true" id="computedField1" tagName="h3"
									styleClass="box-title" value="All Text Anaylized Jobs and Job applications"></xp:text>

							</div>
							<!-- /.box-header -->

							<div class="box-body">
								<div class="col-md-6 col-xs-12">
									<xc:chart
										chart="#{javascript:chartFactoryProducer.getChartFactoryAlchemyLanguageKeywords('jobs').createChart(jobController.jobs)}"
										chartAlias="keywords_jobs" chartAliasGUI="keywords_jobs"
										title="Jobs">
									</xc:chart>
								</div>

								<div class="col-md-6 col-xs-12">
									<xc:chart
										chart="#{javascript:chartFactoryProducer.getChartFactoryAlchemyLanguageKeywords('jobapplications').createChart(jobApplicationController.jobApplications)}"
										chartAlias="keywords_jobapplications" chartAliasGUI="keywords_jobapplications"
										title="Job Applications">
									</xc:chart>
								</div>
							</div>
						</div>
					</div>
				</div>
			</xp:panel>
		</xp:this.facets>
	</xc:ccLayout>
</xp:view>